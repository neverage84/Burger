
<h1 class="center-align white-text"><i class="material-icons medium">local_dining</i>EAT-DA-BURGER</h1>
<div class="container">
 <div class="row burger">
    <div class="col s6">
      <div class="card z-depth-5 medium red darken-4">
        <div class="card-content white-text">
          <span class="card-title">Burgers To Eat</span>
          <div class="NotEaten"></div>
    
      <ul>
        {{#each burger}}
            <div class="row">
            {{#unless this.devoured}}
            
            <li>
              <form class="devour-no">
             {{this.id}}   
             {{this.burger_name}}
             
               <input  type="hidden" class="burger_id" type="text" value="{{this.id}}">
                <button type="submit" class="btn waves-effect waves-light black right Devour" >
		        Devour It
	            </button>
       
            </li>
            </form>
            {{/unless}}
            </div>
        {{/each}}
        </ul>
       
        </div>
        
      </div>
    </div>
    <div class="col s6">
      <div class="card z-depth-5 medium black">
        <div class="card-content white-text">
          <span class="card-title">Burgers Devoured</span>
          <div class="Eaten"></div>
          
      <ul>
        {{#each burger}}
            {{#if devoured}}
            <li>
             {{id}}   
             {{burger_name}}
            
             
            </li> 
            {{/if}}
        {{/each}}
        </ul>
          
        </div>
        
      </div>
    </div>
  </div>
<div class="row center-align">
    <div class="row">
        
      <form class="col s12"  method="post" action="/api/burgers">
        <div class="row center card ">
            
          <div class="input-field col s12 ">
            <input id="input_text" type="text" data-length="30" name="name">
                <label for="input_text">Enter burger to eat then press Submit</label>
                <button class="btn waves-effect waves-light black" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
                </button>
            </div>
         
        </div>
        </div>
        </div>

    </div>
      
    </div>
</div>


